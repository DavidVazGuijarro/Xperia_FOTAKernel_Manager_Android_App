<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.davidvaz.bootxperia.fragment.FotaFragment"
    android:gravity="center"
    android:clickable="true">


    <TextView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_gravity="top"
         android:layout_marginTop="-170dp"
         android:layout_marginBottom="-170dp"
         android:text="@string/warning"
        android:textStyle="bold"
        android:textColor="#ff1000ff" />

    <TextView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_gravity="top"
         android:layout_marginTop="-120dp"
         android:layout_marginBottom="-120dp"
         android:text="@string/warningbackup"
        android:textColor="#ffff001c"
        android:textIsSelectable="false"
        android:textSize="15dp"
        android:textStyle="normal|bold" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:orientation="vertical"
        android:id="@+id/linearLayout2">


    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/fota_backup_button"
        android:text="@string/fota_backup_button"
        android:gravity="center"
        android:clickable="true"
        android:enabled="true"
        android:layout_below="@+id/fota_restore_button"
        android:layout_marginTop="0dp"
        android:layout_marginRight="50dp"
        android:layout_alignLeft="@+id/fota_restore_button"
        android:layout_alignStart="@+id/fota_restore_button" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/fota_restore_button"
        android:text="@string/fota_restore_button"
        android:gravity="center"
        android:clickable="true"
        android:enabled="true"
        android:layout_below="@+id/fota_format_button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginBottom="20dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fota_format_button"
        android:text="@string/fota_format_button"
        android:layout_alignTop="@+id/linearLayout2"
        android:layout_centerHorizontal="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:clickable="true"
        android:enabled="true"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="0dp"
        android:layout_marginRight="50dp"
        android:layout_marginBottom="0dp" />

</RelativeLayout>
